<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="./js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="./bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <link rel="shortcut icon" href="./img/ali.png" type="image/x-icon" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>Home page</title>

    <link href="./css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="./css/dark-light.css" />
    <!-- Custom styles for this template -->
    <link href="./css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="./css/myStyle.css" />
  </head>
  <body>
    <%- include('./components/dark-light.ejs') %>
    <main class="d-flex flex-nowrap">
      <%- include('./components/sidebar' , {currentPage : "index"}) %>

      <section class="w-100">
        <%- include('./components/navbar.ejs') %> <% if (arr.length !== 0) { %>
        <table
          style="width: 99%"
          class="text-center mx-auto table mt-5 table-striped table-bordered"
        >
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Full Name</th>
              <th scope="col">Gender</th>
              <th scope="col">Country</th>
              <th scope="col">Age</th>
              <th scope="col">Last updated</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% arr.forEach((element, index) => { %>

            <tr>
              <th scope="row"><%= index +1 %></th>
              <td><%= element.firstName %> <%= element.lastName %></td>
              <td><%= element.gender %></td>
              <td><%= element.country %></td>
              <td><%= element.age %></td>
              <td><%= moment(element.updatedAt).fromNow() %></td>
              <td>
                <a
                  data-bs-toggle="tooltip"
                  data-bs-title="View details"
                  data-bs-placement="top"
                  class="btn btn-primary btn-sm"
                  href="/view/<%= element._id %>"
                  ><i class="bi bi-eye"></i
                ></a>

                <a
                  data-bs-toggle="tooltip"
                  data-bs-title="Edit user"
                  data-bs-placement="top"
                  class="btn btn-primary btn-sm"
                  href="./edit/<%= element._id %>"
                >
                  <i class="bi bi-pencil"></i>
                </a>
                <form
                  style="display: inline"
                  action="/edit/<%= element._id %>?_method=DELETE"
                  method="post"
                >
                  <button
                    type="button"
                    class="btn btn-danger btn-sm deleteBtn"
                    data-id="<%= element._id %>"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteBtnModal"
                  >
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>

        <% } else { %>
        <div style="text-align: center; margin-top: 150px">
          <h2>no data available</h2>
        </div>
        <% } %>
      </section>
    </main>

    <!-- Modal -->
    <div
      class="modal fade"
      id="deleteBtnModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">...</div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button type="button" id="confirmDelete" class="btn btn-danger">
              Are you sure to delete?
            </button>
          </div>
        </div>
      </div>
    </div>

    <script src="./js/bootstrap.bundle.min.js"></script>

    <script src="./js/sidebars.js"></script>

    <script src="./js/main.js"></script>

    <script>
      let deleteForm = null;

      document.querySelectorAll(".deleteBtn").forEach((btn) => {
        btn.addEventListener("click", () => {
          // الحصول على الفورم القريب من زر الحذف
          deleteForm = btn.closest("form");
        });
      });

      document.getElementById("confirmDelete").addEventListener("click", () => {
        if (deleteForm) {
          deleteForm.submit(); // إرسال الفورم بعد التأكيد
        }
      });
    </script>
  </body>
</html>
